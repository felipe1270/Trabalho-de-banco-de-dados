@model Aluno
<form asp-controller="Aluno" asp-action="Cadastrar" method="post">
    <div class="text-center">
        <h3 class="display-4 m-5">Cadastrar Aluno</h3>
    </div>
    <div class="d-block form-row">
        <div class="col-md-4 mb-3">
          <label for="validationServer01">Nome</label>
          <input type="text" class="form-control" id="validationServer01" placeholder="seu nome" value="" required asp-for="Nome">
        </div>
        <div class="col-md-4 mb-3">
          <label for="validationServer02">Data de nascimento</label>
            <input type="text" class="form-control" id="validationServer02" placeholder="quando voce nasceu" value="" required asp-for="DataNascimento">
        </div>
    </div>
  <button class="btn btn-primary" type="submit">Cadastrar</button>
</form>